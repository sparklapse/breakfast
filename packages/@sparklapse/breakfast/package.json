{
  "name": "@sparklapse/breakfast",
  "version": "0.1.0",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "test": "npm run test:integration && npm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test:integration": "playwright test",
    "test:unit": "vitest"
  },
  "type": "module",
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./io": {
      "types": "./dist/io/index.d.ts",
      "import": "./dist/io/index.js",
      "svelte": "./dist/io/index.js"
    },
    "./db": {
      "types": "./dist/db/index.d.ts",
      "import": "./dist/db/index.js"
    },
    "./overlay": {
      "types": "./dist/overlay/index.d.ts",
      "import": "./dist/overlay/index.js",
      "svelte": "./dist/overlay/index.js"
    },
    "./overlay/global": {
      "types": "./dist/overlay/global.d.ts",
      "import": "./dist/overlay/global.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "svelte": "^4.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.28.1",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/color": "^3.0.6",
    "@types/d3-interpolate": "^3.0.4",
    "@types/d3-selection": "^3.0.10",
    "@types/d3-timer": "^3.0.2",
    "@types/d3-zoom": "^3.0.8",
    "@types/eslint": "^9.6.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.36.0",
    "globals": "^15.0.0",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "publint": "^0.2.0",
    "svelte": "^4.2.7",
    "svelte-check": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.0.11",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "bits-ui": "^0.21.15",
    "color": "^4.2.3",
    "d3-interpolate": "^3.0.1",
    "d3-selection": "^3.0.0",
    "d3-timer": "^3.0.1",
    "d3-zoom": "^3.0.0",
    "nanoid": "^5.0.7",
    "svelte-french-toast": "^1.2.0"
  }
}
